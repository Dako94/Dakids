# Usa l'immagine ufficiale Node.js
FROM node:20

# Imposta la working directory
WORKDIR /app

# Copia package.json e package-lock.json
COPY package*.json ./

# Installa le dipendenze
RUN npm install

# Copia il resto del codice
COPY . .

# Espone la porta (Render user√† $PORT)
EXPOSE 7000

# Comando di avvio
CMD ["node", "addon.js"]
